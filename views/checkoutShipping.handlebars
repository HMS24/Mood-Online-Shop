<p class="page title border-0">確認頁</p>

<div class="row checkout">
  <main class="col-lg-8">
    <div class="main-content">
      <form action="/orders/checkout/shipping" method="POST">
        <section>
          <p class="title">配送地址</p>

          <div class="form-group">
            <input type="email" name="orderEmail" class="form-control" value="{{email}}" placeholder="電子郵件地址*" autofocus
              required>
            <span>您可以在結帳後加入會員。</span>
          </div>
          <hr>
          <br>

          <div class="form-group">
            <input type="text" name="receiveName" class="form-control" value="{{receiveName}}" placeholder="名字*"
              required>
          </div>

          <div class="form-group">
            <select class="form-control custom-select-sm" name="receiveCountry">
              <option value="" disabled hidden selected>請選擇您的國家*</option>
              <option {{#eq receiveCountry '台灣'}} selected {{/eq}}>台灣</option>
            </select>
          </div>

          <div class="form-group">
            <select class="form-control custom-select-sm" name="county" required>
              <option value="" disabled hidden selected>請選擇您的縣市*</option>
              {{#each counties}}
              <option {{#eq ../county this}} selected {{/eq}}>{{this}}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="township" value="{{township}}" placeholder="鄉鎮市區*" required>
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="street" value="{{street}}" placeholder="街道地址*" required>
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="zip" value="{{zip}}" placeholder="郵遞區號*" required>
          </div>

          <div class="form-group">
            <input type="tel" class="form-control" name="receivePhone" value="{{receivePhone}}" pattern="[0-9]{10}"
              placeholder="手機號碼*" required>
            <span>格式：0912345678</span>
          </div>
        </section>

        <section>
          <p class="title">配送方式</p>
          {{> shippingMethods}}
        </section>

        <div class="border-top">
          <button type="submit" class="btn btn-action w-25">
            <span>下一步</span>
          </button>
        </div>
      </form>
    </div>
  </main>

  <aside class="info col-lg-4">
    <section class="panel">
      <p class="title border-bottom-0 pb-0">訂單資訊</p>
      <div>
        {{> minicartItem}}
        <div class="expected-cost">
          <div class="items amount">
            <span>購物車總計</span>
            <span>
              {{#currency subTotal}}
              {{/currency}}
            </span>
          </div>
          <div class="shipping-fee amount ">
            <span>配送資訊</span>
            <span>
              {{#currency shippingFee}}
              {{/currency}}
            </span>
          </div>
          <div class="total amount font-weight-bold">
            <span>訂單金額</span>
            <span>
              {{#currency totalAmount}}
              {{/currency}}
            </span>
          </div>
        </div>
      </div>
    </section>
  </aside>
</div>