<div class="row">
  <div class="col-md-4"></div>
  <div id="data-panel" class="row col-md-8">

    {{#each products}}
    <div class="col-md-4 product">
      <div class="card mb-4 shadow-sm product-{{this.sn}}">
        <div class="product-imgs">
          {{#each productImages}}
          <img class="bd-placeholder-img card-img-top color-option-{{@key}}" width="100%" height="auto" src="{{this}}">
          {{/each}}
        </div>

        <div class="card-body product-info">
          <p class="card-text">
            <span class="product-name">
              <a href="/products/{{this.id}}">{{this.name}}</a>
            </span>
            <br>
            <span class="product-price">NT$ {{this.salePrice}}</span>
          </p>

          <div class="switch-attribute-option mb-3">
            {{#each colorImages}}
            <span>
              <a href="javascript:;">
                <img src="{{this}}" class="color-option" alt="color-img" width="25" height="25"
                  data-product-sn="{{../this.sn}}" data-color-option={{@key}}>
              </a>
            </span>
            {{/each}}
          </div>

          <div class="d-flex align-items-center">
            <div class="ml-auto mr-2">
              <form action="">
                <button class="btn btn-sm btn-outline-secondary">Love</button>
              </form>
            </div>

            <div class="btn-group">
              <form action="/carts" method="POST">
                <button type="submit" class="btn btn-sm btn-outline-secondary">加入購物車</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>
<script src="/javascripts/switchProductMainImage.js"></script>