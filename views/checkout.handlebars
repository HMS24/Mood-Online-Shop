<p class="page title border-0">確認頁</p>

<div class="row checkout">
  <main class="col-lg-8 w-75">
    <div class="panel">
      <form action="/orders/checkout/shipping" method="POST">
        <div>
          <p class="title">配送地址</p>

          <div class="form-group">
            <label for="email">電子郵件地址<span class="required-icon">*</span></label>
            <input type="email" id="email" name="email" class="form-control" value="{{email}}" required>
            <span>您可以在結帳後加入會員。</span>
          </div>
          <hr>
          <br>

          <div class="form-group">
            <label for="name">名字<span class="required-icon">*</span></label>
            <input type="text" id="name" name="name" class="form-control" value="{{name}}" autofocus required>
          </div>

          <div class="form-group">
            <label for="country">國家<span class="required-icon">*</span></label>
            <select class="form-control custom-select-sm" id="country" name="country" required>
              <option value="">請選擇您的國家</option>
              <option {{#eq country '台灣'}} selected {{/eq}}>台灣</option>
            </select>
          </div>

          <div class="form-group">
            <label for="county">縣市<span class="required-icon">*</span></label>
            <select class="form-control custom-select-sm" id="county" name="county" required>
              <option value="">請選擇一個縣市</option>
              {{#each counties}}
              <option {{#eq ../county this}} selected {{/eq}}>{{this}}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="township">鄉鎮市區<span class="required-icon">*</span></label>
            <input type="text" class="form-control" id="township" name="township" value="{{township}}" required>
          </div>

          <div class="form-group">
            <label for="street">街道地址<span class="required-icon">*</span></label>
            <input type="text" class="form-control" id="street" name="street" value="{{street}}" required>
          </div>

          <div class="form-group">
            <label for="postal">郵遞區號<span class="required-icon">*</span></label>
            <input type="text" class="form-control" id="postal" name="postal" value="{{postal}}" required>
          </div>

          <div class="form-group">
            <label for="phone">手機號碼<span class="required-icon">*</span></label>
            <input type="tel" class=" form-control" id="phone" name="phone" value="{{phone}}" pattern="[0-9]{10}"
              required>
            <span>格式：0912345678</span>
          </div>

        </div>

        <div>
          <p class="title">配送方式</p>
          {{> shippingMethods}}
        </div>

        <div>
          <button type="submit" class="btn btn-action w-25">
            <span>繼續</span>
          </button>
        </div>
      </form>
    </div>
  </main>

  <aside class="info col-lg-4">
    <section class="panel">
      <p class="title border-bottom-0 pb-0">訂單資訊</p>
      <div>
        {{> minicartItem}}
        <div class="expected-cost">
          <div class="amount">
            <span>購物車總計</span>
            <span>
              {{#currency subTotal}}
              {{/currency}}
            </span>
          </div>
          <div class="shipping-fee amount ">
            <span>配送資訊</span>
            <span>
              {{#currency shippingFee}}
              {{/currency}}
            </span>
          </div>
          <div class="total amount font-weight-bold">
            <span>訂單金額</span>
            <span>
              {{#currency total}}
              {{/currency}}
            </span>
          </div>
        </div>
      </div>
    </section>
  </aside>
</div>

<script src="/javascripts/index.js"></script>