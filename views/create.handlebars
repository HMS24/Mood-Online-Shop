<span class="page-title">新增訂單</span>

<div class="row create-order">
  <div class="shipping-info col-lg-8">
    <form action="/" method="POST">
      <div class="shipping-address">
        <p class="title">配送地址</p>

        <div class="form-group">
          <label for="name">名字<span class="required-icon">*</span></label>
          <input type="text" id="name" name="name" class="form-control" value="Ethan Huang" autofocus required>
        </div>

        <div class="form-group">
          <label for="country">國家<span class="required-icon">*</span></label>
          <select class="form-control custom-select-sm" id="country" name="country" required>
            <option value="">請選擇您的國家</option>
            <option {{#eq country '台灣'}} selected {{/eq}}>台灣</option>
          </select>
        </div>

        <div class="form-group">
          <label for="county">縣市<span class="required-icon">*</span></label>
          <select class="form-control custom-select-sm" id="county" name="county" required>
            <option value="">請選擇一個縣市</option>
            {{#each counties}}
            <option {{#eq ../county this}} selected {{/eq}}>{{this}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="township">鄉鎮市區<span class="required-icon">*</span></label>
          <input type="text" class="form-control" id="township" name="township" value="彰化市" required>
        </div>

        <div class="form-group">
          <label for="street">街道地址<span class="required-icon">*</span></label>
          <input type="text" class="form-control" id="street" name="street" value="信義里民生路317巷17號1樓" required>
        </div>

        <div class="form-group">
          <label for="postal">郵遞區號<span class="required-icon">*</span></label>
          <input type="text" class="form-control" id="postal" name="postal" value="500" required>
        </div>

        <div class="form-group">
          <label for="tel">電話號碼<span class="required-icon">*</span></label>
          <input type="tel" class="form-control" id="tel" name="tel" value="0912387122" required>
        </div>
      </div>

      <div class="shipping-methods">
        <p class="title">配送方式</p>

        {{> shippingMethods}}
      </div>

      <input type="submit">
    </form>
  </div>

  <div class="buy-list col-lg-4">
    <p class="title">購物清單</p>
    <div class="info">

      {{> minicartItem}}

      <div class="expected-cost">
        <div class="products-amount">
          <span>購物車總計</span>
          <span>{{subTotal}}</span>
        </div>
        <div class="shipping-fee">
          <span>配送資訊</span>
          <span>{{selectedShippingFee}}</span>
        </div>
        <p class="total-amount">
          <span>訂單金額</span>
          <span>{{total}}</span>
        </p>
      </div>

    </div>
  </div>
</div>