<div id="product" class="col-md-10 mx-auto">
  <section id="content">
    <div class="row">
      <div class="col-md-5 gallery">
        <div class="main">
          {{#each productImages}}
            <span class="color-{{@key}}">
              {{#each this}}
                <img src="{{this}}" class="img-order order-{{@key}} mx-auto" data-option="{{@key}}" width="250px"
                  height="auto">
              {{/each}}
            </span>
          {{/each}}
        </div>
        <div class="nav-wrap p-3 text-center">
          {{#each productImages}}
            <span class="color-{{@key}}">
              {{#each this}}
                <img src="{{this}}" class="img-order order-{{@key}}" data-option="{{@key}}" width="60px" height="auto">
              {{/each}}
            </span>
          {{/each}}
        </div>
      </div>

      <div class="col-md-7 info">
        <div class="title d-flex flex-column">
          <h4 class="name">{{name}}</h4>
          <span class="price my-1">NT$ {{salePrice}}</span>
          <small>有現貨</small>
        </div>
        <hr>

        <div class="attribute-options">
          <div class="color-option">
            <p>Color:</p>
            {{#each colorImages}}
              <a href="javascript:;">
                <img src="{{this}}" class="color" data-option={{@key}} alt="color-img" width="25" height="25">
              </a>
            {{/each}}
          </div>

          <div class="size-option">
            <p class="mt-3">Size:</p>
            {{#each productSizes}}
              <div class="mb-3 color-{{@key}}">
                {{#each this}}
                  <button type="button" class="btn btn-dark btn-sm size" data-option={{this}}>{{this}}</button>
                {{/each}}
              </div>
            {{/each}}
          </div>
        </div>
        <hr>

        <div class="action">
          <div class="btn-group">

            <form action="/cart" method="POST" class="d-flex">
              <div class="calc-quantity d-flex">
                <a href="javascript:;" class="text-dark quantity-minus">
                  -
                </a>
                <input hidden name="name" value="{{name}}">
                <input hidden name="productSn" value="{{sn}}">
                <input hidden name="color">
                <input hidden name="size">
                <input type="text" name="quantity" class="quantity" value="1">

                <a href="javascript:;" class="text-dark quantity-plus">
                  +
                </a>
              </div>
              <button type="submit" id="product-addtocart-button" class="btn btn-sm mx-3 tocart">加入購物車</button>
            </form>

            <form action="">
              <button class="btn btn-sm btn-outline-secondary">Love</button>
            </form>
          </div>
        </div>
        <hr>
      </div>
    </div>
  </section>
  <hr>
  <section id="detail">

  </section>
</div>
<script src="/javascripts/index.js"></script>