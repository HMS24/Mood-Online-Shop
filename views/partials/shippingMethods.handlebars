<div class="check">
  {{#each shippingMethods}}
  <div class="form-check">
    <input class="form-check-input" type="radio" name="shipping" value={{@key}} id={{@key}} {{#eq @key ../shipping}}
      checked {{/eq}} required>
    <label class="form-check-label" for="{{@key}}">
      {{#each this}}
      <span>
        {{#currency this}}
        {{/currency}}
      </span>
      {{/each}}
    </label>
  </div>
  {{/each}}
</div>