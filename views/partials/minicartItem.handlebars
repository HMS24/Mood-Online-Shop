<div id="minicart">
  <span class="text-muted pb-1 toggle" data-toggle="collapse" data-target="#minicart-expend">
    商品項目
  </span>
  <hr>
  <div id="minicart-expend" class="collapse">
    <div class="wrapper">
      <ul class="pl-0">
        {{#each cartItems}}
        <li class="d-flex py-3 border-bottom">
          <div class="item-img mt-1 mr-3">
            <a href="/products/{{this.sn}}">
              <div class="item-img-wrapper">
                <img src="../{{this.image}}" width="100%">
              </div>
            </a>
          </div>

          <div class="item-detail">
            <div class="item-detail-name">
              <strong>
                <a href="/products/{{this.sn}}">
                  {{this.name}}
                </a>
              </strong>
            </div>

            <div class="item-detail-qty">
              <span>數量 :</span>
              <span>{{this.quantity}}</span>
            </div>

            <div class="item-detail-price">
              <span>單價 :</span>
              <span>
                {{#currency salePrice}}
                {{/currency}}
              </span>
            </div>

            <span class="toggle collapsed text-muted" data-toggle="collapse" data-target="#expend-{{this.sku}}">
              查看詳細資訊
            </span>

            <div id="expend-{{this.sku}}" class="collapse pt-1">
              <div class="item-detail-color">
                <span>顏色 :</span>
                <span>{{this.color}}</span>
              </div>

              <div class="item-detail-size">
                <span>尺寸 :</span>
                <span> {{this.size}}</span>
              </div>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>