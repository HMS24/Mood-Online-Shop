{{#if errorMessage}}
<div class="alert alert-danger col-md-6 mx-auto" role="alert" style="margin: 30px 0 ;">
  ✘ {{errorMessage}}
</div>
{{/if}}

{{#if successMessage}}
<div class="alert alert-success col-md-6 mx-auto" role="alert" style="margin: 30px 0 ;">
  ✘ {{successMessage}}
</div>
{{/if}}

{{#if errors}}
<ul class="alert alert-danger col-md-6 mx-auto" role="alert" style="margin: 30px 0;list-style-type:none;">
  {{#each errors}}
  <li>✘ {{this.message}}</li>
  {{/each}}
</ul>
{{/if}}